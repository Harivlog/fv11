<!DOCTYPE html>
<html>
  <head>
    <title>Welcome</title>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="./css/main.css" />

    <link rel="stylesheet" href="./css/owl.carousel.min.css" />
    <link rel="stylesheet" href="./css/owl.theme.default.min.css" />
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container-fluid">
        <a class="navbar-brand" href="/profile">Profile</a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/profile">
                Lectures
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/show-job">
                Jobs
              </a>
            </li>
          </ul>
          <form class="d-flex ms-auto" style="margin-left: auto">
            <button class="btn me-auto btn-outline-success" type="submit">
              Logout
            </button>
          </form>
        </div>
      </div>
    </nav>
    <!-- start Here  -->

    <div class="col-md-12 col-md-offset-4 new">
      <div class="lect-heading">
        <h2>Live Lectures For Students</h2>
      </div>
      <div>
        <!-- <center>
          <table class="table table-hover">
            <tr>
              <td>Email</td>
              <td><%= email %></td>
            </tr>
          </table>
        </center> -->
      </div>

      <!-- <div class="abc">
        <a href="/logout">Logout</a>
      </div> -->
    </div>

    <div class="container">
      <div class="row my-5" style="justify-content: space-between;">
        <% courses.forEach(function(course){ %>
        <div class="card mb-3 me-3 col-md-5 p-0" >
         
          <div class="row no-gutters">
            <div class="col-md-6">
              <img
                src="<%= course.image %>"
                class="card-img"
                style="width: 100%; height: 100%"
              />
            </div>
            <div class="col-md-6">
              <div class="card-body">
                <h5 style="text-align: left" class="card-title">
                  <%= course.title %>
                </h5>
                <p style="text-align: left" class="card-text">
                  <%= course.insinuate %>
                </p>
                <p style="text-align: left" class="card-text">
                  <small class="text-muted">
                    <%= course.date %> / <%= course.time %>
                  </small>
                </p>
                <a
                  style="display: block; text-align: left"
                  href="<%= course._id %>"
                >
                  Read More
                </a>
              </div>
            </div>
          </div>
        </div>

        <% }); %>
      </div>
    </div>

    <div class="owl-carousel">
      <% ad.forEach(function(item){ %>
      <div  class="card"  style="margin-left: 30px ; margin-right: 30px; ">
        <img src="<%= item.image %> " style="height: 130px;" class="card-img-top" alt="..." />
        <div class="card-body">
          <div  class="d-flex justify-content-between">
            <h5 class="card-title"><%= item.title %></h5>

          </div>
          <div class="d-flex justify-content-between">
            <!-- <p class="card-text"><%= item.description %></p> -->
            <p>Actual Price</p>
            <p class="card-text"><%= item.sale %></p>

          </div>
          <div class="d-flex justify-content-between">
            <!-- <p class="card-text"><%= item.description %></p> -->
            <p>Sale Price</p>
            <p class="card-text"><%= item.discount %></p>

          </div>
          <a href="/<%= item._id %>" class="btn btn-primary">Go somewhere</a>
        </div>
      </div>

      <% }); %>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>

    <script
      src="https://code.jquery.com/jquery-3.6.0.js"
      integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk="
      crossorigin="anonymous"
    ></script>
    <script src="./js/owl.carousel.min.js"></script>

    <script>
      $(document).ready(function () {
        $(".owl-carousel").owlCarousel({
          loop: true,
          dots: true,
          items: 4,
          autoplay: true,
          infinite: true,
          responsiveClass: true,
          responsive: {
            0: {
              items: 1,
              nav: true,
            },
            600: {
              items: 3,
              nav: false,
            },
            1000: {
              items: 5,
              nav: true,
              loop: false,
            },
          },
        });
      });
    </script>
  </body>
</html>
